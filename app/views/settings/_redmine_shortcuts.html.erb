  <tbody>
    <tr>
      <th><%= l(:shortcuts_settings_enable_in_issues) %></th>
      <td>
        <%= check_box_tag("settings[enable_issue_shortcuts]", "1", @settings['enable_issue_shortcuts'].to_s == "1" ) %>
      </td>
    </tr>
    <tr>
      <th><%= l(:shortcuts_settings_enable_in_editor) %></th>
